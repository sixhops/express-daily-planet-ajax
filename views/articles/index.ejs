<h1>Articles</h1>

<a href="/articles/new" class="btn btn-primary">New Article</a>

<% articles.forEach(function(article, idx) { %>
  <div class="well">
    <a href="/articles/<%= article.id %>"><h2><%= article.title %></h2></a>
    <a class="delete-tag" href="/articles/<%=article.id %>">DELETE</a>
    <a class="edit-tag" href="/articles/<%= article.id %>/edit">EDIT</a>
  </div>
<% }); %>
